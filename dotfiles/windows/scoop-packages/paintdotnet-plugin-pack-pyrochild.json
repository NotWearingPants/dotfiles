{
	"$schema": "https://raw.githubusercontent.com/lukesampson/scoop/master/schema.json",
	"version": "2017-12-04",
	"homepage": "https://forums.getpaint.net/topic/7291-pyrochild-plugins",
	"description": "pyrochild Plugins for paint.net",
	"depends": "paint.net",
	"url": "https://forums.getpaint.net/applications/core/interface/file/attachment.php?id=13067#/dl.zip",
	"installer": {
		"script": [
			"(Get-ChildItem \"$dir\\*.dll\").Name | Out-File \"$dir\\plugins.txt\"",
			"Move-Item \"$dir\\*.dll\" \"$dir\\..\\..\\..\\persist\\paint.net\\Effects\\\""
		]
	},
	"uninstaller": {
		"script": [
			"Get-Content \"$dir\\plugins.txt\" | ForEach-Object { Remove-Item \"$dir\\..\\..\\..\\persist\\paint.net\\Effects\\$_\" }"
		]
	}
}
