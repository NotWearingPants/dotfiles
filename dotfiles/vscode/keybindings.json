[
	// toggle GitLens line blame using Ctrl+KL
	{ "key": "ctrl+k ctrl+l", "command": "gitlens.toggleLineBlame", "when": "editorTextFocus" },

	// the flash extension binds very common shortcuts, remove them
	{ "key": "ctrl+enter", "command": "-as3mxml.quickCompileAndRun" },
	{ "key": "ctrl+shift+enter", "command": "-as3mxml.quickCompileAndDebug" },

	// remove all the annoying npm Ctrl+R chords to allow using Ctrl+R in the terminal
	{ "key": "ctrl+r r", "command": "-npm-script.rerun-last-script" },
	{ "key": "ctrl+r shift+r", "command": "-npm-script.run" },
	{ "key": "ctrl+r t", "command": "-npm-script.test" },
	{ "key": "ctrl+r l", "command": "-npm-script.showOutput" },
	{ "key": "ctrl+r shift+x", "command": "-npm-script.terminate-script" },

	// remove all the annoying github Ctrl+L chords to allow using Ctrl+L in the terminal
	{ "key": "ctrl+l c", "command": "-extension.copyGitHubLinkToClipboard" },
	{ "key": "ctrl+l g", "command": "-extension.openInGitHub" },
	{ "key": "ctrl+l p", "command": "-extension.openPrGitProvider" },

	// remove liveshare conflict with bookmarks extension
	{ "key": "ctrl+alt+j", "command": "-liveshare.join", "when": "liveshare:state != 'Joined' && liveshare:state != 'Shared'" },

	// i only use "tab moves focus" by accident
	{ "key": "ctrl+m", "command": "-editor.action.toggleTabFocusMode" },

	// Alt+T to open terminal at the location of the current file
	{ "key": "alt+t", "command": "workbench.action.terminal.newWithCwd", "args": { "cwd": "${fileDirname}" } },
]
